{
  "name": "coga-mvp",
  "version": "0.1.0",
  "description": "COGA - Real-Time Stress Detection & Intervention System",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm run electron:dev",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch",
    "build:extension": "webpack --config webpack.extension.config.js --mode production",
    "build:extension:dev": "webpack --config webpack.extension.config.js --mode development",
    "watch:extension": "webpack --config webpack.extension.config.js --mode development --watch",
    "test": "tsx tests/stressDetector.test.ts",
    "serve": "node server.js",
    "start": "npm run electron:start",
    "electron": "electron .",
    "electron:dev": "npm run build:dev && electron .",
    "electron:start": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "node scripts/check-wine.js --win && npm run build && node scripts/run-wine-build.js",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:all": "npm run build && electron-builder --win --linux",
    "electron:version": "electron --version"
  },
  "keywords": [
    "stress-detection",
    "wellness",
    "productivity",
    "intervention",
    "desktop-app",
    "electron"
  ],
  "author": "COGA Labs",
  "license": "MIT",
  "dependencies": {
    "core-js": "^3.33.0",
    "iohook": "^0.9.3",
    "lucide": "^0.548.0",
    "node-gg": "^1.0.0",
    "node-global-key-listener": "^0.3.0",
    "node-gyp": "^12.1.0"
  },
  "iohook": {
    "targets": [
      "electron-174"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.28.5",
    "@types/node": "^24.9.2",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^12.2.3",
    "electron-builder": "^24.13.3",
    "style-loader": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.cogalabs.coga-mvp",
    "productName": "COGA",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "electron/**/*",
      "extension/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "extension/icons/icon128.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "extension/icons/icon128.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
